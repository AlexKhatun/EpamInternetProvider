@model IEnumerable<BOL.Models.User>

@{
    ViewBag.Title = "Список незарегистрированных пользователей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewBag.Msg</h1>
<h2>Заявки на регистрацию</h2>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Имя", "SeeListUnregUsers", new { sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "FirstName"})
        </th>
        <th>
            @Html.ActionLink("Фамилия", "SeeListUnregUsers", new { sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "LastName"})
        </th>
        <th>
            @Html.ActionLink("Email", "SeeListUnregUsers", new { sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "Email"})
        </th>
        <th>
            @Html.ActionLink("Дата регистрации", "SeeListUnregUsers", new { sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "RegisterDate"})
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.ActionLink("Зарегистрировать пользователя", "RegisterUser", new {id = item.UserId})
            </td>
        </tr>
    }

</table>
