@model IEnumerable<BOL.Models.Rate>

@{
    ViewBag.Title = "SeeRateList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewBag.Msg</h1>
<h2>Список тарифов</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "AddRate", new {area = "Admin", controller = "Admin"})
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Название услуги", "SeeRateList", new {sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "ServiceTitle", page = ViewBag.Page ?? "1"})
        </th>
        <th>
            @Html.ActionLink("Название тарифа", "SeeRateList", new {sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "Title", page = ViewBag.Page ?? "1"})
        </th>
        <th>
            @Html.ActionLink("Цена", "SeeRateList", new {sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "Price", page = ViewBag.Page ?? "1"})
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {

                    @Html.ActionLink("Редактировать", "EditRate", new {area = "Admin", controller = "Admin", id = item.RateId})
                    <span>|</span>
                }

                @Html.ActionLink("Детали", "SeeRateDetails", new {id = item.RateId})
                @if (User.IsInRole("Admin"))
                {
                    <span>|</span>
                    @Html.ActionLink("Удалить", "DeleteRate", new {area = "Admin", controller = "Admin", id = item.RateId})
                }
            </td>
        </tr>
    }

</table>

@{
    double pages = ViewBag.Pages;
}
@for (int i = 0; i < pages; i++)
{
    @Html.ActionLink((i + 1).ToString() + " ", "SeeRateList", new { sortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), sortBy = "FirstName", page = i })
}


